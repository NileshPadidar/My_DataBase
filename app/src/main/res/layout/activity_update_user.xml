<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Update Data"
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="#E91E63"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:strokeColor="#4951EF"
        android:layout_marginHorizontal="12dp"
        app:strokeWidth="1dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#C678E3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="First Name"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:fontFamily="@font/inter_regular"
                android:inputType="text"
                android:maxLength="25"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textColor="@color/black"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="Mobile Number"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:maxLength="14"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="Age"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:maxLength="4"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="Address"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_custom"
                android:fontFamily="@font/inter_regular"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:singleLine="true"
                android:textColor="@color/black" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <TextView
        android:id="@+id/tvUpdateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/theme_stroke_background"
        android:backgroundTint="#F126B7"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:importantForAutofill="no"
        android:padding="13dp"
        android:text="Update Now"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>